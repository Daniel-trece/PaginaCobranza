<!DOCTYPE html>
<html lang="es">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Registros enfermeria</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="https://frameworkccpcss.000webhostapp.com/framework.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
<!--Nav-->
<nav class="navbar navbar-light bg-c4 mb-2">
    <div class="container-fluid">
      <a class="navbar-brand txt-c7" href="#">
        <img >
        Centro Cultural de Petatlán - Enfermería
      </a>
    </div>
  </nav>
  
  <!--Botones-->
    <div align="center">
      <button class="btn-nv btn btn2 bg-c4 mx-2">Eduación Incial</button>
      <button class="btn-nv btn btn2 bg-c4 mx-2">Prescolar</button>
      <button class="btn-nv btn btn2 bg-c4 mx-2">Primaria</button>
      <button class="btn-nv btn btn2 bg-c4 mx-2">Secundaria</button>  
    </div><br>
  
    <section>
        <div>
            <h2 class="text-center">Estudiantes Registrados</h2>
          </div>
          <hr>
          <div>
            <h4 class="text-center txt-c2">Enfermería</h4>
          </div>
          <!--Barra de busqueda-->
            <div class="text-center">
                <form action="#"> 
                <div>
                <input type="text" placeholder="Buscar Alumnos" class="busqueda" >
                <button class="btn-sh"><i class="bi bi-search"></i></button>
                </div>
                </form>
            </div>
    </section>
<br>
    <!--Tabla de alumnos-->
    <section>
        <div class="container">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Matricula</th>
                  <th>Nombre del Alumno</th>
                  <th>Seccion y Grupo</th>
                  <th>Acción</th>
                </tr>
              </thead>
              <tbody>
                <% enfermeria.forEach((datosEnfermeria) => { %>
                    <tr>
                        <td><%= datosEnfermeria.id_estudiante %></td>
                        <td><%= datosEnfermeria.nombre %></td>
                        <td><%= datosEnfermeria.seccion %> del Grupo <%= datosEnfermeria.grupo %></td>
                        <td><a class="btn bg-c3 txt-c7 btn2" href="/enfermeria/mas-informacion/<%= datosEnfermeria.id_estudiante %>">Ver más</a></td>
                    </tr>
                <% }) %>
            </tbody>
          </table>
          </div>
    </section>

















    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js" integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous"></script>
</body>

</html>