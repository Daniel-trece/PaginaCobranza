<!DOCTYPE html>
<html lang="es">

    <%- include('../partials/head.ejs') %>

    <style>
        .btnregre{
            color: gray;
            transition: all 500ms;
        }
        .btnsave{
            color: gray;
            transition: all 500ms;
        }
        .btnsave:hover{
            color: rgb(8, 140, 85);
        }
        .btnregre:hover{
            color: rgb(255, 0, 0);
        }
        .inputhw{
            height: 40px; 
            width: 100%;
        }
        .container{
            border-radius: 30px;
        }
        footer div div a {
        color: #1A78F3 !important;
        transition: all 800ms !important;
        }
        footer div div a:hover{
            background-color: #1A78F3;
            color: white !important;
        }
        body {
        background: rgb(170, 224, 249);
        background: -moz-linear-gradient(180deg, rgba(170, 224, 249, 1) 0%, rgba(234, 209, 211, 1) 100%);
        background: -webkit-linear-gradient(180deg, rgba(170, 224, 249, 1) 0%, rgba(234, 209, 211, 1) 100%);
        background: linear-gradient(180deg, rgba(170, 224, 249, 1) 0%, rgba(234, 209, 211, 1) 100%);
        filter: ;
        progid: DXImageTransform.Microsoft.gradient(startColorstr="#aae0f9", endColorstr="#ead1d3", GradientType=1);
        -webkit-filter: progid: DXImageTransform.Microsoft.gradient(startColorstr="#aae0f9", endColorstr="#ead1d3", GradientType=1);
}
    </style>
<body>
<!--Nav-->
<%- include('./partials/navbar.ejs') %> 
    <section class="container sbr-1 mt-4 p-4 bg-c7">
        <% enfermeria.forEach((datosEnfermeria) => { %>
            <form action="" method="POST">
                <div>
                    <div class="d-flex justify-content-between">
                        <a href="javascript: history.go(-1)" class="btn btnregre" style="font-size: 1.8rem;"><i class="bi bi-box-arrow-left" style="font-size: 35px;"></i> Volver</a>
                        <button class="btn btnsave" type="submit" style="font-size: 1.8rem;">Guardar <i  style="font-size: 35px;" class="bi bi-cloud-arrow-up"></i></button>
                    </div>
                    <div>
                        <h3 class="text-center txt-c4"><%= datosEnfermeria.nombre %> - <%= datosEnfermeria.id_estudiante %></h3>
                    <div class="row mx-5 p-4 justify-content-center text-center">
                        <div class="col">
                            <h4 class="fs-5 fw-normal">IMC</h4> 
                                <div class="inputhw">
                                    <input type="text" value="<%= datosEnfermeria.IMC %>" name="IMC" class="form-control sbr-2" style="border-radius: 5px;">
                                </div>
                        </div>
                        <div class="col">
                            <h4 class="fs-5 fw-normal">Peso</h4>
                                <div class="inputhw">
                                    <input type="text" value="<%= datosEnfermeria.peso %>" name="peso" class="form-control sbr-2" style="border-radius: 5px;">
                                </div>
                        </div>
                        <div class="col">
                            <h4 class="fs-5 fw-normal">Talla</h4>
                                <div class="inputhw">
                                    <input type="text" class="form-control sbr-2" name="talla" value="<%= datosEnfermeria.talla %>" style="border-radius: 5px;">
                                </div>
                        </div>
                    </div>
                    <div class="row mx-5 p-2">
                        <div class="col">
                            <h4 class="fs-5 fw-normal">Alerg√≠as</h4>
                            <textarea type="text" class="form-control sbr-2" style="height: 70px; border-radius: 15px;" name="alergias"><%= datosEnfermeria.alergias %></textarea>
                        </div>
                    </div>
                    <div class="row mx-5 p-2">
                        <div class="col">
                            <h4 class="fs-5 fw-normal">Enfermedades</h4>
                            <textarea type="text" class="form-control sbr-2" style="height: 70px; border-radius: 15px;" name="enfermedades"><%= datosEnfermeria.enfermedades %></textarea>
                        </div>
                    </div>
                    <div class="row mx-5 p-2">
                        <div class="col">
                            <h4 class="fs-5 fw-normal">Observaciones</h4>
                            <textarea type="text" class="form-control sbr-2" style="height: 70px; border-radius: 15px;" name="observaciones"><%= datosEnfermeria.observaciones %></textarea>
                        </div>
                    </div>
                    </div>
                </div>
            </form>
        <% }) %>

    </section>
    <%- include('../partials/footer.ejs') %> 
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js" integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous"></script>
</body>

</html>