                    <input type="text" value="<%= datosAdmin.grupo %>" name="grupo" id="">
                </div>
                <div>
                    <label>Nombre del Tutor</label>
                    <input type="text" value="<%= datosAdmin.nombre_tutor %>" name="nombre_tutor" id="">
                </div>
                <div>
                    <label>Telefono del Tutor</label>
                    <input type="tel" value="<%= datosAdmin.tel_tutor %>" name="tel_tutor" id="">
                </div>
                <div>
                    <label>Enlace Boleta</label>
                    <input type="text" value="<%= datosAdmin.link_boleta %>" name="link_boleta" id="">
                </div>
                <div>
                    <label>Cambiar Monto</label>
                    <input type="number" value="<%= datosAdmin.colegiatura %>" name="colegiatura">
                </div>
                <div>
                    <input type="submit" value="Actualizar Registro">
                </div>
            </div>
    
        <% }) %>
        
    </form>

</body>
</html>