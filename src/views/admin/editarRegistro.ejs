                    <label>Matricula</label>
                    <input type="number" value="<%= datosAdmin.id_estudiante %>" name="id_estudiante" id="id">
                </div>
                <div>
                    <label>Nombre</label>
                    <input type="text" value="<%= datosAdmin.nombre %>" name="nombre" id="">
                </div>
                <div>
                    <label>Secci√≥n</label>
                    <select name="seccion">
                        <option value="<%= datosAdmin.seccion %>">--- <%= datosAdmin.seccion %> ---</option>
                        <option value="Educacion Inicial">Esducacion Inicial</option>
                        <option value="Preescolar">Preescolar</option>
                        <option value="Primaria">Primaria</option>
